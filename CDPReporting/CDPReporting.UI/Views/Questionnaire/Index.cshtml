@model CDPReporting.UI.Models.QuestionGroup
@{
    ViewBag.Title = "Questionnaire";
}

<h2>CDP Survey</h2>
<style type="text/css">
    .row > div {
        margin-bottom: 15px;
    }

    .header {
        min-height: 90px;
    }

    .footer {
        min-height: 60px;
    }

    .header, .footer {
        background: #2f2f2f;
    }

    .sidebar {
        background: #dbdfe5;
    }

    .content {
        background: #b4bac0;
    }

    .sidebar, .content {
        min-height: 300px;
    }
</style>

<script src="~/Scripts/jquery-3.1.1.min.js"></script>

<script type="text/javascript">
   
    $(document).ready(function () {
        $('div[id^="QUESTANS_"]').hide();
        $("#questionListDiv>div").click(function () {
            var selectedDivId = this.id;
            $('div[id^="QUESTANS_"]').hide();
            $('#QUESTANS_' + selectedDivId).show();           
        });
    });
</script>

<div class="row">
    <div class="col-sm-4">
        <div class="sidebar" id="questionListDiv">
            @Html.Partial("_ViewQuestionList", Model.Questions)
        </div>
    </div>
    <div class="col-sm-8">
        <div class="content" id="questionResponseDiv">
            @Html.Partial("_ViewAnswerTheQuestion", Model.Questions)
        </div>
    </div>
</div>

