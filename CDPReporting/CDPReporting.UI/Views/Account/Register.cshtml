@model CDPReporting.UI.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>

@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>


<script type="text/javascript">
    function Validate() {
        var value = $("#PlantId option:selected").text();
        if (value == "--Please Select Plant--") {
            alert('Please Select Plant.');
            return false;
        }
    }
</script>
@Html.ValidationSummary(true, "Register was unsuccessful. Please correct the errors and try again.")
@using (Html.BeginForm())
{

    <div class="LoginContainer">
        <div class="TopHeaderCont">
            <div class="Text">
                @if (Model.IsADDetailFetched)
                {

                    @: Please Select Your Plant
             }
                else
                {
                    @:  Please Select Your Plant and Email Address
             }
            </div>
        </div>
        <!--View Post Detail-1 starts here -->
        <div class="PostDetailCont">
            <div class="ViewpostCont">
                <div class="TitleCont" style="display:none;">
                    <div class="TxtCont">
                        @Html.LabelFor(m => m.UserName):
                    </div>
                    <div>
                        @Html.TextBoxFor(m => m.UserName, new { style = "background-color: #EBEBE4;color: #545454;", @class = "input", @readonly = "readonly" })

                        @*  <div style="padding-top:3px;font-size: 13px;color:dimgray;width:600px;">&nbsp;&nbsp;Please input your windows user id </div>*@


                    </div>
                    <div style="width: 80%;height: auto;margin: 0px 0px 0px 120px;float: left;"> @Html.ValidationMessageFor(m => m.UserName)</div>



                </div>
                @if (Model.IsADDetailFetched)
                {
                    <div class="TitleCont" style="display:none;">
                        <div class="TxtCont">
                            @Html.LabelFor(m => m.Email):
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "input", @readonly = "readonly", style = "background-color: #EBEBE4;color: #545454;" })

                        </div>
                        <div style="width: 80%;height: auto;margin: 0px 0px 0px 120px;float: left;"> @Html.ValidationMessageFor(m => m.Email)</div>
                    </div>
                }
                else
                {
                    <div class="TitleCont">
                        <div class="TxtCont">
                            @Html.LabelFor(m => m.Email):
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.Email, new { @class = "input" })

                        </div>
                        <div style="width: 80%;height: auto;margin: 0px 0px 0px 120px;float: left;"> @Html.ValidationMessageFor(m => m.Email)</div>
                    </div>
                }

                <div class="TitleCont" style="display:none;">
                    <div class="TxtCont">
                        @Html.LabelFor(m => m.Password):
                    </div>
                    <div>
                        @Html.PasswordFor(x => x.Password, new { value = Model.Password, @class = "input", @readonly = "readonly", style = "background-color: #EBEBE4;color: #545454;" })

                        @*   @Html.PasswordFor(m => m.Password, new { @class = "input", @readonly = "readonly" })*@
                        @*  <div style="padding-top:3px;font-size: 13px;color:dimgray;width:600px;"> &nbsp;&nbsp;Please input your windows password</div>*@


                    </div>
                    <div style="width: 80%;height: auto;margin: 0px 0px 0px 120px;float: left;"> @Html.ValidationMessageFor(m => m.Password)</div>
                </div>
                <div class="TitleCont">
                    <div class="TxtCont">
                        Plant:
                    </div>
                    <div>
                        @Html.DropDownListFor(model => model.PlantId, new SelectList(Model.Plants.ResultList, "PlantId", "PlantName"), new { @class = "input", style = "width:44%; height:24px;" })

                    </div>
                    <div style="width: 80%;height: auto;margin: 0px 0px 0px 120px;float: left;"> @Html.ValidationMessageFor(m => m.PlantId)</div>
                </div>
                @*<div class="TitleCont">
                        <div class="TxtCont">
                            @Html.LabelFor(m => m.ConfirmPassword):</div>
                        <div>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input" })
                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                        </div>
                    </div>*@
                <div class="TitleCont">
                    <div class="TxtCont">
                    </div>
                    <div>

                        <div class="SubmitButtonRed1">
                            <input type="submit" id="Register" value="Save" onclick="return Validate();" />
                        </div>
                        <br />

                        @*   <div style="width: 80%;height: auto;margin: 5px 0px 0px 120px;float: left; color:#D40000; font-family: Calibri; font-size:15px">
                            Please select Plant and click Register to register yourself in the System
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
        <!--View Post Detail-1 starts here -->
        <div style="clear: both">
        </div>
        <br />
        <br />
        <div class="TopHeaderCont">
        </div>
    </div>

}
